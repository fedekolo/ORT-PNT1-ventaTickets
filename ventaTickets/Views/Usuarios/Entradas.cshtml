@model IEnumerable<ventaTickets.Models.Entrada>

<h3>Entradas adquiridas</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ubicacion)
            </th>
            <th>
                Detalles
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0) {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        $@Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sector)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ubicacion)
                    </td>
                    <td>
                        <a href="/Shows/DetailsEntrada/@Html.DisplayFor(modelItem => item.showId)">Ver detalles</a>
                    </td>
                </tr>
            }
        } else {
            <tr>
                <td>
                    <h3>No hay entradas</h3>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
