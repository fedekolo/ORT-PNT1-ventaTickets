@model IEnumerable<ventaTickets.Models.Entrada>

<h3>Tickets Comprados</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.show)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ubicacion)
            </th>
            <th>
                Ticket
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0) {

         
               int contador = -1;
               int showid = -1;


            @foreach (var item in Model)
            {
                if (item.showId != showid)
                {
                    showid = item.showId;
                    contador++;
                }
                
                <tr>
                    <td>
                        @ViewBag.nomShows[contador]
                    </td>

                    <td>
                        $@Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sector)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ubicacion)
                    </td>
                    <td>
                        <a href="/Shows/DetailsEntrada/@Html.DisplayFor(modelItem => item.Id)">Imprimir</a>
                    </td>
                </tr>
            }
        } else {
            <tr>
                <td>
                    <h3>No hay entradas</h3>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
